@model major_project.Models.attires

<h4>Borrow Attire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="attire" class="control-label"></label>
                <select asp-for="attire" asp-items="ViewBag.attire" class="form-control" >
                    <option>Please select attire</option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label" >
                    <input class="form-check-input" checked="checked" asp-for="availability" /> @Html.DisplayNameFor(model => model.availability)
                </label>                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Request" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>   
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
